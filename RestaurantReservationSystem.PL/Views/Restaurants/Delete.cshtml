@model RestaurantReservationSystem.DAL.Entities.Restaurant

@{
    ViewData["Title"] = "Delete Restaurant";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-danger">Delete Restaurant</h1>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this restaurant?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Restaurant Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="d-flex justify-content-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
